<div class="col-xs-12">
  <div class = "card">
    <div class="header">
      <h1> Users </h1>
      <ul class="header-dropdown m-r--5">
        <li class="dropdown">
          <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">
            <i class="material-icons">more_vert</i>
          </a>
          <ul class="dropdown-menu pull-right">
            <li><%= link_to 'Add New User', new_user_path, method: :get, :class => "waves-effect waves-block" %></li>
          </ul>
        </li>
      </ul>
    </div>
  <div class="body table-responsive">
    <table class="table table-bordered">

      <thead>
      <tr>
        <th>Name</th>
        <th>Cost of meal</th>
        <th>created_at</th>
        <th>updated_at</th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
          <tr>
            <td><%= link_to "#{user.name}", edit_user_path(user), method: :get %></td>
            <td><%= user.cost_of_meal %></td>
            <td><%= user.created_at %></td>
            <td><%= user.updated_at %></td>
            <td><%= link_to 'Destroy', user_path(user), :method => :delete, :data => {:confirm => 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  </div>
</div>