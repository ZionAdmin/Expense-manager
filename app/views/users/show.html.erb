<div class="col-xs-12">
  <div class="card">
    <div class="header">
      <h1>User Details</h1>
    </div>
    <div class="body">
  <p>
    <strong>Name:</strong>
    <%= @user.name %>
  </p>
  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>
  <p>
    <strong>Cost of meal:</strong>
    <%= @user.cost_of_meal %>
  </p>
  <p>
    <%= link_to 'Edit', edit_user_path(@user), :class => "btn btn-primary", method: :get %>
    <%= link_to 'Back', users_path, :class => "btn btn-warning" %>
  </p>
    </div>
  </div>
</div>
