<div class="col-xs-12">
  <div class="card">
    <div class="header">Daily Details</div>
    <div class="body">
      <%= form_tag('/daily_details') do %>
          <div class="container-fluid">
            <div class="row">
              <div class="col-sm-3">
                <p>
                  Date
                  <%= text_field_tag 'date', nil, :id => 'daily_detail_date' %>
                </p>
              </div>
              <div class="col-sm-3">
                <p>
                  <%= button_tag "Submit", class: "btn btn-primary waves-effect" %>
                </p>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
  <div class="card">
    <div class="header">Results</div>
    <div class="body">
      <% if @date_error %>
          <div id="error_explaination">
            <ul>
              <div class="alert alert-warning alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span></button>
                <li><%= @date_error_message %>
              </div>
              </li>
            </ul>
          </div>
      <% end %>
      <% @invoices.each do |invoice| %>
          <table class="table table-bordered">
            <tbody>
            <tr>
              <td><b>Meal Details</b></td>
              <td></td>
            </tr>
            <tr>
              <td>Restaurant name:</td>
              <td><%= invoice.restaurant_name %></td>
            </tr>
            <tr>
              <td>Amount:</td>
              <td><%= invoice.amount %></td>
            </tr>
            <tr>
              <td>Date:</td>
              <td><%= invoice.date %></td>
            </tr>
            <tr>
              <td>Bill:</td>
              <td><%= image_tag(invoice.image.url, width: '90%;')  %></td>
            </tr>
            </tbody>
          </table>

          <table class="table table-bordered">
            <thead>
            <tr>
              <th>User Name</th>
              <th>Had Meal</th>
              <th>Cost Of Meal</th>
              <th>Total Sub</th>
            </tr>
            </thead>

            <tbody>
            <% lunch_details = Expense.where("expenses.date =?", @vardate) %>
            <% lunch_details.each do |lunch_detail| %>
                <tr>
                  <td><%= lunch_detail.user.name %></td>
                  <td><%= lunch_detail.had_lunch %></td>
                  <td><%= lunch_detail.user.cost_of_meal %></td>
                  <td>
                    <% if lunch_detail.had_lunch == true %>
                        <%= lunch_detail.user.cost_of_meal %>
                    <% else %>
                        <%= 0 %>
                    <% end %>
                  </td>
                </tr>
            <% end %>
            <tr>
              <td></td>
              <td></td>
              <td><b>Total:</b></td>
              <td><%= @total_amount %></td>
            </tr>
            </tbody>
          </table>
      <% end %>
    </div>
  </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#daily_detail_date").datepicker({dateFormat: "yy-mm-dd"});
    });
</script>

