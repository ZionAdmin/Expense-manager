<div class="col-xs-12">
  <div class="card">
    <div class="header">
      <h1> User Payments</h1>
      <ul class="header-dropdown m-r--5">
        <li class="dropdown">
          <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">
            <i class="material-icons">more_vert</i>
          </a>
          <ul class="dropdown-menu pull-right">
            <li><%= link_to 'Add New UserPayment', new_user_payment_path, method: :get, class: "waves-effect waves-block" %></li>
          </ul>
        </li>
      </ul>
    </div>


  <div class="body table-responsive">
    <table class="table table-bordered">
    <thead>
    <tr>
      <th>User</th>
      <th>Amount_Paid</th>
      <th>Payment_Gateway</th>
      <th>Date</th>
      <th>Comment</th>
      <th>created_at</th>
      <th>updated_at</th>
    </tr>
    </thead>
    <tbody>
    <% @userpayments.each do |userpayment| %>
        <tr>
          <td><%= userpayment.user.name %></td>
          <td><%= userpayment.amount_paid %></td>
          <td><%= userpayment.payment_mode.payment_gateway %></td>
          <td><%= userpayment.date %></td>
          <td><%= userpayment.comment %></td>
          <td><%= userpayment.created_at %></td>
          <td><%= userpayment.updated_at %></td>
          <td><%= link_to 'Destroy', user_payment_path(userpayment), :method => :delete, :data => {:confirm => 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  </div>
</div>
</div>